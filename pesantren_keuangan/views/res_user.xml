<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_view_users_form_header" model="ir.ui.view">
        <field name="name">inherit.view.users.form.header</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <!-- Inherit bagian header -->
            <header>
                <button name="konfigurasi_akses_keuangan" string="Akses Keuangan" type="object" class="btn-primary"/>
            </header>
            <xpath expr="//field[@name='email']" position="before">
                <field name="work_email"/>
            </xpath>
        </field>
    </record>
    <record id="hr_leave_view_form_inherit_groups" model="ir.ui.view">
        <field name="name">hr.leave.view.form.inherit.groups</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <!-- Approve Button -->
            <xpath expr="//button[@name='action_approve']" position="attributes">
                <attribute name="groups">hr_holidays.group_hr_manager</attribute>
            </xpath>
            <!-- Validate Button -->
            <xpath expr="//button[@name='action_validate']" position="attributes">
                <attribute name="groups">hr_holidays.group_hr_user</attribute>
            </xpath>
            <!-- Refuse Button -->
            <xpath expr="//button[@name='action_refuse']" position="attributes">
                <attribute name="groups">hr_holidays.group_hr_manager</attribute>
            </xpath>
            <!-- Cancel Button -->
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
            <!-- Reset Button -->
            <xpath expr="//button[@name='action_reset_confirm']" position="attributes">
                <attribute name="groups">base.group_user</attribute>
            </xpath>
        </field>
    </record>
</odoo>