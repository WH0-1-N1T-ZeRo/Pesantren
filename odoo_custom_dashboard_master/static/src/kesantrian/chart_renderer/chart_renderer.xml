<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.ChartRenderer" owl="1">
        <div class="chart-container clickable">
            <t t-if="props.type === 'chart'">
                <div t-ref="chart" class="h-full w-full"/>
            </t>
            <t t-if="props.type === 'donutChart'">
                <div t-ref="donutChart" />
            </t>
            <t t-if="props.type === 'chart2'">
                <div t-ref="chart2" class="h-full w-full"/>
            </t>
            <t t-if="props.type === 'donutChart2'">
                <div t-ref="donutChart2" />
            </t>
        </div>
    </t>
</templates>